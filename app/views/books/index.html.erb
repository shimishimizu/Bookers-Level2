<header>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>



			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<label>Title</label>
			<br>
			<%= f.text_field :title %>
			<br>
			<label>Opinion</label>
			<br>
			<%= f.text_area :opinion %>
			<br>
			<%= f.submit 'Create Book' %>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
            <teble>
	            <thead>
		            <tr>
			            <th></th>
			            <th>Title</th>
			            <th>Opinion</th>
		            </tr>
	            </thead>

	            <tbody>
	                <% @books.each do |book| %>
		            <tr>
			            <td><%= link_to "#{book.title}", "#{book_path(book.id)}" %></td>
			            <td><%= book.opinion %></td>
			            <td></td>
		            </tr>
		            <% end %>
	            </tbody>
            </teble>
        </div>
    </div>
</div>