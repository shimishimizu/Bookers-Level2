<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding-top:51px;">
      <header>
          <nav class="navbar navbar-inverse navbar-fixed-top">
              <div class="container-fluid">
                  <div class="container">
                      <div class="navbar-header navbar-left">
                          <span class="header-title">Bookers</span>
                      </div>

                      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                          <% if user_signed_in? %>
                          <li class="">
                              <%= link_to user_path(current_user.id), class: "home"  do %>
                                  <span class="glyphicon glyphicon-home home" aria-hidden="true"> Home</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to users_path, class: 'users' do %>
                                  <span class="glyphicon glyphicon-user users" aria-hidden="true"> Users</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to books_path, class: 'books' do %>
                                  <span class="glyphicon glyphicon-book books" aria-hidden="true"> Books</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to destroy_user_session_path, method: :delete, class: 'logout' do %>
                                  <span class="glyphicon glyphicon-log-out logout" aria-hidden="true"> logout</span>
                              <% end %>
                          </li>

                          <% else %>
                          <li class="">
                              <%= link_to root_path, class: 'home' do %>
                                  <span class="glyphicon glyphicon-home home" aria-hidden="true"> Home</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to homes_path, class: 'about' do %>
                                  <span class="glyphicon glyphicon-link about" aria-hidden="true"> About</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to new_user_registration_path, class: 'sign_up' do %>
                                  <span class="glyphicon glyphicon-edit sign_up" aria-hidden="true"> sign up</span>
                              <% end %>
                          </li>

                          <li class="">
                              <%= link_to new_user_session_path, class: 'sign_in' do %>
                                  <span class="glyphicon glyphicon-log-in sign_in" aria-hidden="true"> login</span>
                              <% end %>
                          </li>
                          <% end %>
                      </ul>
                  </div>
              </div>
          </nav>
      </header>

      <%= yield %>

      <footer>
        <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
      </footer>

  </body>
</html>
