<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>

            <%= attachment_image_tag @user, :user_image, :fill, 100, 100, fallback: "no_image.jpg" %>

            <table class="table">
	            <tbody>
                    <tr>
			            <th>name</th>
                        <th><%= @user.name %></th>
		            </tr>
                    <tr>
			            <th>introduction</th>
                        <th><%= @user.introduction %></th>
		            </tr>
		        </tbody>
	        </table>

            <%= link_to edit_user_path(@user.id), class: "btn btn-default btn-block edit_user_#{@user.id}" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>

			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

			<div class="form-group">
			<label>Title</label>
			<br>
			<%= f.text_field :title, :class=>"form-control book_title" %>
			</div>

			<div class="form-group">
			<label>Opinion</label>
			<br>
			<%= f.text_area :opinion, :class=>"form-control book_body" %>
			</div>

			<%= f.submit 'Create Book', :class=>"btn btn-primary btn-block" %>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
            <table class="table">
	            <thead>
		            <tr>
			            <th>image</th>
			            <th>name</th>
			            <th colspan="3"></th>
		            </tr>
	            </thead>

	            <tbody>
	                <% @users.each do |user| %>
		            <tr>
			            <td><%= attachment_image_tag user, :user_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
			            <td><%= user.name %></td>
			            <td><%= link_to "show", user_path(user.id), class: "user_#{user.id}" %> </td>
		            </tr>
		            <% end %>
	            </tbody>
            </table>
        </div>
    </div>
</div>

