<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>



            <table>
	            <tbody>
                    <tr>
			            <th>name</th>
                        <th><%= @user.name %></th>
		            </tr>
                    <tr>
			            <th>introduction</th>
                        <th><%= @user.introduction %></th>
		            </tr>
		        </tbody>
	        </table>
            <%= link_to '#', edit_user_path(@user.id) %>

			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<label>Title</label>
			<br>
			<%= f.text_field :title %>
			<br>
			<label>Opinion</label>
			<br>
			<%= f.text_area :opinion %>
			<br>
			<%= f.submit 'Create Book' %>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
            <teble>
	            <thead>
		            <tr>
			            <th>image</th>
			            <th>name</th>
			            <th></th>
		            </tr>
	            </thead>

	            <tbody>
	                <% @users.each do |user| %>
		            <tr>
			            <td></td>
			            <td><%= user.name %></td>
			            <td><%= link_to "show", user_path(user.id) %> </td>
		            </tr>
		            <% end %>
	            </tbody>
            </teble>
        </div>
    </div>
</div>

